<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#FFFFFFFF">
    
    <!-- 添加导航 -->
    <include
        android:id="@+id/dorm_plate_main_ref_top"
        android:layout_alignParentTop="true"
        layout="@layout/activity_nav_bar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dorm_plate_main_ref_top"
        android:layout_above="@+id/dorm_plate_main_ref_bottom"  
        android:orientation="vertical"

        android:gravity="center_horizontal"
       
        >
        <ImageView
            android:id="@+id/dorm_plate_main_iv"
	    	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="80dp"
        	android:background="@drawable/qr_capture_intro"
        	android:scaleType="fitCenter"
        	android:onClick="openQrcodeCapture"
            />  
    </LinearLayout> 

   
</RelativeLayout>
