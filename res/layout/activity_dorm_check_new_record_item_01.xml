<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFFFF" >
	
	<!-- 1-考评项目 -->
	<!-- 地面 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="#11000000"
	    >
		<TextView
			android:layout_width="match_parent"
			android:layout_height="30dip"
			android:paddingLeft="20dip"
			android:gravity="center_vertical"
			android:textSize="16sp"
			android:textColor="#FFFFFFFF"
			android:background="#FF555555"
			android:text="地面"
			/>
		<RadioGroup 
			android:id="@+id/dorm_exam_new_record_rg_ground" 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal"
			android:gravity="center_vertical" >
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_ground_01"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="0分" 
				android:textColor="#FF000000" 
				/>
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_ground_02"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="5分" 
				android:textColor="#FF000000"
				android:checked="true"
				/>
		
		</RadioGroup>
	</LinearLayout>
	
	<!-- 气味 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="#11000000"
	    >
		<TextView
			android:layout_width="match_parent"
			android:layout_height="30dip"
			android:paddingLeft="20dip"
			android:gravity="center_vertical"
			android:textSize="16sp"
			android:textColor="#FFFFFFFF"
			android:background="#FF555555"
			android:text="气味"
			/>
		<RadioGroup 
			android:id="@+id/dorm_exam_new_record_rg_smell" 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal"
			android:gravity="center_vertical" >
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_smell_01"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="0分" 
				android:textColor="#FF000000" 
				/>
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_smell_02"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="5分" 
				android:textColor="#FF000000"
				android:checked="true"
				/>
			
		</RadioGroup>
	</LinearLayout>	

	<!-- 门窗 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="#11000000"
	    >
		<TextView
			android:layout_width="match_parent"
			android:layout_height="30dip"
			android:paddingLeft="20dip"
			android:gravity="center_vertical"
			android:textSize="16sp"
			android:textColor="#FFFFFFFF"
			android:background="#FF555555"
			android:text="门窗"
			/>
		<RadioGroup 
			android:id="@+id/dorm_exam_new_record_rg_doorWindows" 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal"
			android:gravity="center_vertical" >
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_doorWindows_01"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="0分" 
				android:textColor="#FF000000" 
				/>
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_doorWindows_02"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="5分" 
				android:textColor="#FF000000"
				android:checked="true"
				/>
			
		</RadioGroup>
	</LinearLayout>
	
	<!-- 垃圾 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="#11000000"
	    >
		<TextView
			android:layout_width="match_parent"
			android:layout_height="30dip"
			android:paddingLeft="20dip"
			android:gravity="center_vertical"
			android:textSize="16sp"
			android:textColor="#FFFFFFFF"
			android:background="#FF555555"
			android:text="垃圾"
			/>
		<RadioGroup 
			android:id="@+id/dorm_exam_new_record_rg_rubbish" 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal"
			android:gravity="center_vertical" >
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_rubbish_01"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="0分" 
				android:textColor="#FF000000" 
				/>
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_rubbish_02"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="5分" 
				android:textColor="#FF000000"
				android:checked="true"
				/>
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_rubbish_03"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
		        android:layout_weight="1.2"
			    android:text="10分" 
			    android:textColor="#FF000000" 
			    />

		</RadioGroup>
	</LinearLayout>

	<!-- 卫生间 -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="#11000000"
	    >
		<TextView
			android:layout_width="match_parent"
			android:layout_height="30dip"
			android:paddingLeft="20dip"
			android:gravity="center_vertical"
			android:textSize="16sp"
			android:textColor="#FFFFFFFF"
			android:background="#FF555555"
			android:text="卫生间"
			/>
		<RadioGroup 
			android:id="@+id/dorm_exam_new_record_rg_toilet" 
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="20dp"
			android:paddingRight="20dp"
			android:orientation="horizontal"
			android:gravity="center_vertical" >
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_toilet_01"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="0分" 
				android:textColor="#FF000000" 
				/>
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_toilet_02"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="5分" 
				android:textColor="#FF000000"
				android:checked="true"
				/>
			<RadioButton
				android:id="@+id/dorm_exam_new_record_rb_toilet_03"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
		        android:layout_weight="1"
			    android:text="10分" 
			    android:textColor="#FF000000" 
			    />
		</RadioGroup>
	</LinearLayout>			
	
</LinearLayout>
